# =================================
# Etapa de construcción (Builder)
# =================================
FROM node:18-alpine AS builder

# Establecer directorio de trabajo
WORKDIR /app

# Copiar archivos de configuración y dependencias
COPY package.json pnpm-lock.yaml ./

# Instalar dependencias
RUN npm install -g pnpm
RUN pnpm install --frozen-lockfile

# Copiar código fuente
COPY . .

# Variables de entorno para Vite (disponibles en build time)
# Valor por defecto apuntando al proxy de Nginx
ARG VITE_API_URL=/api
ENV VITE_API_URL=$VITE_API_URL

# Construir la aplicación para producción
ENV NODE_ENV=production
RUN pnpm run build

# =================================
# Etapa de producción (Runtime)
# =================================
FROM alpine:latest AS production

# Solo mantener los archivos construidos
COPY --from=builder /app/dist /dist

# Al iniciar, copiar artefactos de build al volumen montado /app/dist y mantener contenedor activo
CMD sh -c "rm -rf /app/dist && mkdir -p /app/dist && cp -r /dist/* /app/dist && tail -f /dev/null"